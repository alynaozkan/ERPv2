@model ERP.Models.Kontrol.Genel.BSMGRNNMGEN001
@{
    ViewData["Title"] = "Yeni Firma Ekle";
}

<h1>Yeni Firma Ekle</h1>

<form method="post">
    <div class="form-group">
        <label>Firma Kodu</label>
        <input asp-for="COMCODE" class="form-control" />
        <span asp-validation-for="COMCODE" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Firma Adı</label>
        <input asp-for="COMTEXT" class="form-control" />
        <span asp-validation-for="COMTEXT" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Adres 1</label>
        <input asp-for="ADRESS1" class="form-control" />
        <span asp-validation-for="ADRESS1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Adres 2</label>
        <input asp-for="ADRESS2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şehir Kodu</label>
        <select asp-for="CITYCODE" class="form-control" asp-items="ViewBag.CITYCODE"></select>
    </div>
    <div class="form-group">
        <label>Ülke Kodu</label>
        <select asp-for="COUNTRYCODE" class="form-control" asp-items="ViewBag.COUNTRYCODE"></select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

