@model IEnumerable<ERP.Models.Kontrol.Genel.BSMGRNNMGEN001>
@{
    ViewData["Title"] = "Firmalar";
}

<h1>Firmalar</h1>

<table class="table">
    <thead>
        <tr>
            <th>Firma Kodu</th>
            <th>Firma Adı</th>
            <th>Adres 1</th>
            <th>Adres 2</th>
            <th>Şehir Kodu</th>
            <th>Ülke Kodu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.COMCODE</td>
                <td>@item.COMTEXT</td>
                <td>@item.ADRESS1</td>
                <td>@item.ADRESS2</td>
                <td>@item.CITYCODE</td>
                <td>@item.COUNTRYCODE</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.COMCODE">Detay</a> |
                    <a asp-action="Edit" asp-route-id="@item.COMCODE">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.COMCODE">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Firma Ekle</a>
